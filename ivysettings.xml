<ivysettings>
	<!-- Create a ivy.properties file in your home dir and put a line in with your repository, realm, username and passwd 
		The repository, realm and the paths below for publishing are temporary until we are set up to publish to sonatype 
		to get our artifacts into central -->
	<properties file="${user.home}/ivy.properties"/>
	<property name="repository.dir" value="${user.home}/.ivy2"/>
	<settings defaultResolver="chained"/>
	<credentials host="${repository}" realm="${realm}" username="${username}"
		passwd="${password}"/>
	<namespaces>
		<namespace name="m2">
			<rule>
				<fromsystem>
					<src org="servletapi"/>
					<dest org="javax.servlet"/>
				</fromsystem>
				<tosystem>
					<src org="javax.servlet"/>
					<dest org="servletapi"/>
				</tosystem>
			</rule>
			<rule>
				<fromsystem>
					<src org="com.sun.xml"/>
					<dest org="javax.xml"/>
				</fromsystem>
				<tosystem>
					<src org="javax.xml"/>
					<dest org="com.sun.xml"/>
				</tosystem>
			</rule>
		</namespace>
	</namespaces>
	<resolvers>
		<chain name="chained">
			<filesystem name="libraries">
				<ivy pattern="${repository.dir}/[organisation]/ivy-[revision].xml"/>
				<artifact
					pattern="${repository.dir}/[organisation](-[module])/[artifact]-[revision](-[type]).[ext]"
				/>
				<artifact
					pattern="${repository.dir}/[organisation](-[module])/[artifact]-[revision].[ext]"
				/>				
			</filesystem>
			<ibiblio name="publish" namespace="m2" m2compatible="true"
				root="http://${repository}/artifactory/repo/"
				pattern="[organisation]/[module]/[revision]/[artifact]-[revision](-[type]).[ext]"/>
			<ibiblio name="publish" namespace="m2" m2compatible="true"
				root="http://${repository}/artifactory/repo/"
				pattern="[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>				
		</chain>
		<url name="publish-local" m2compatible="true">
			<artifact
				pattern="http://${repository}/artifactory/libs-releases-local/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"
			/>
		</url>
		<url name="publish-local-extra" m2compatible="true">
			<artifact
				pattern="http://${repository}/artifactory/libs-releases-local/[organisation]/[module]/[revision]/[artifact]-[revision]-[type].[ext]"
			/>
		</url>		
	</resolvers>
</ivysettings>
